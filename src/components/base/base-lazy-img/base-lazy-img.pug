.base-lazy-img(
  v-if='loaded'
  role='img'
  :aria-label='alt'
  :style="{ backgroundImage: 'url(' + currentImg + ')', flexShrink: '0', position: imageType }"
  v-waypoint="{ active: true, callback: onWaypoint, options: intersectionOptions }")
  .base-lazy-img__overlay(:style="{ backgroundColor: bgColor, position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', width: '100%', height: '100%' }" v-if='loading')
    .base-lazy-img__overlay-gif(:style="{ backgroundImage: 'url(' + animatedGif + ')', maxHeight: '3rem', maxWidth: '3rem', position: 'absolute', top: '50%', left: '50%', transform: 'translate(-50%, -50%)', backgroundSize: 'contain', width: '100%', height: '100%' }")
  img.base-lazy-img__image.sr-only(
    :src='currentImg'
    :alt='alt')
